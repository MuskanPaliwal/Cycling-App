<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Payment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/average"
        android:gravity="center|center_horizontal|center_vertical"
        android:text=" Complete Your Payment "
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="bold"
       />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="194dp"
        android:layout_height="164dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/pedla_qr" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/average"
        android:text="Instructions"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_margin="8dp"
        android:textStyle="bold"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="1. Scan the QR code and pay via any UPI app. \n\n 2. You will get your Epic Code.\n\n 3. Do mention the Epic code in the message of upi app.\n\n 4. We are providing this epic code way to avoid unnecessary charges of payment gateway.\n\n 5.You can also pay cash at the store itself."
        android:textSize="18sp"
        android:fontFamily="@font/buenard"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fece2f"
        android:fontFamily="@font/average"
        android:text="Confirm Booking"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />

    </LinearLayout>

</ScrollView>