<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece2f"
    tools:context=".Cycles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/cimage1"
                    android:layout_margin="10dp"
                    android:src="@drawable/cone"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cname1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="Cycle 1"
                        android:textSize="24sp"
                        android:fontFamily="@font/antic"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/camount1"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:text="Amount: Rs. 200/hr"
                        />


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c2"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:id="@+id/cimage2"
                android:layout_margin="10dp"
                android:src="@drawable/ctwo"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cname2"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:text="Cycle 2"
                    android:textSize="24sp"
                    android:fontFamily="@font/antic"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/camount2"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"
                    android:text="Amount: Rs. 100/hr"
                    />


            </LinearLayout>
        </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c3"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/cimage3"
                    android:layout_margin="10dp"
                    android:src="@drawable/cthree"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cname3"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="Cycle 3"
                        android:textSize="24sp"
                        android:fontFamily="@font/antic"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/camount3"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:text="Amount: Rs. 100/hr"
                        />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c4"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/cimage4"
                    android:layout_margin="10dp"
                    android:src="@drawable/cfour"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cname4"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="Cycle 4"
                        android:textSize="24sp"
                        android:fontFamily="@font/antic"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/camount4"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:text="Amount: Rs. 300/hr"
                        />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/c5"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/cimage5"
                    android:layout_margin="10dp"
                    android:src="@drawable/cfive"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cname5"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="Cycle 5"
                        android:textSize="24sp"
                        android:fontFamily="@font/antic"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/camount5"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:text="Amount: Rs. 150/hr"
                        />


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>